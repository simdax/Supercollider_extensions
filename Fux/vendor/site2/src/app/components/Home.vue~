<template lang="pug">
	svg(v-html="svg")
</template>

<script>
import {mapActions, mapState, mapGetters} from 'vuex';
let methods = mapActions(['getSVG']);
let computed = mapGetters(['svg']);

export default {
		methods, computed,
		mounted() {
				this.getSVG(1)
				console.log("et ta mere ??")
				console.log("FICK")
				document.querySelectorAll('.Note').forEach(el => {
						let move = function (ev) {
								console.log(this)
								let offset = console.log(ev.pageY - this.y)
								let taille = console.log(ev.pageY - this.y)
								ev.target.style = `transform: translateY(offset % this.height)`
						}
						document.addEventListener('mousedown', ev =>{
								let height = ev.target.getBoundingClientRect().height
								console.log(height)
								ev.target.setAttribute('fill', 'red')
								document.addEventListener('mousemove', move.bind({height, y:ev.pageY}));
						})	
						document.addEventListener('mouseup', ev =>{
								document.removeEventListener('mousemove', move);
						})	
				})
		}
}
</script>

<style scoped>
	.Note{
	fill: red;
	cursor: pointer;
	}
	.home-container {
  text-align: center;
	}
	svg{
	height: 100%;
	width: 100%;
	}
	h1 {
  color: #2c3e50;
  margin-top: 60px;
	}
</style>
